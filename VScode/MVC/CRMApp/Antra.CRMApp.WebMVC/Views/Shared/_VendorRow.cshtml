@{
}
@model VendorResponseModel
<tr>
    <td>@Model.Id</td>
    <td>@Model.Name</td>
    <td>@Model.City</td>
    <td>@Model.Country</td>
    <td>@Model.Mobile</td>
    <td>@Model.EmailId</td>
    <td>
        @{
            var discontinuedStatus = "Unavailable";
            if(@Model.IsActive)
            {
                discontinuedStatus = "Available";
            }
        }
        @discontinuedStatus
    </td>
    <td>
        <span>
            <a asp-controller="Vendor" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
        </span>
    </td>
    <td>
        <span>
            <a asp-controller="Vendor" asp-action="Delete"  asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
        </span>
    </td>
</tr> 